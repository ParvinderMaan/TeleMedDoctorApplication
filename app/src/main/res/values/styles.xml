<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:fontFamily">@font/appfont</item>

    </style>


    <style name="ActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>

    </style>

    <style name="FragmentThemeOne" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlue</item>

    </style>

    <style name="FragmentThemeTwo" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorRed</item>

    </style>

    <style name="CropActivityTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="CheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:textColorSecondary">@color/colorBlue</item>
    </style>
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLightWhite</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/colorRed</item>
    <item name="android:textColorPrimary">@color/colorBlack</item>
    <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AppCompatAlertDialogStyleII" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
<!--        <item name="colorAccent">@color/colorBlue</item>-->
<!--        <item name="colorPrimary">@color/colorBlue</item>-->

    </style>


    <style name="PickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


<!--    CALENDAR VIEW -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_click_text_change</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_click_text_change</item>
    </style>

</resources>
