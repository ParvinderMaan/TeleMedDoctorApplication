<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".password.OneTimePasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_logo_blue"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/circular_std_medium"
            android:text="@string/title_doctor_app"
            android:textColor="@color/colorRed" />

        <include
            android:id="@+id/progress_bar"
            layout="@layout/layout_progress_bar" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="PLEASE ENTER"
                android:textAlignment="center"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="2"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="The verification code that get from following email"
                android:textAlignment="center"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv___"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:text="ab@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="12sp"
                android:textStyle="normal" />
            <Space
                android:id="@+id/space_empty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_otp_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:padding="@dimen/_20sdp"
                    android:text=""
                    android:layout_margin="@dimen/_2sdp"

                    android:textSize="34sp"
                    android:textColor="@color/colorRed"
                    android:textColorHint="@color/colorLightBlue"
                    app:backgroundTint="@color/colorRed"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_otp_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:layout_margin="@dimen/_2sdp"

                    android:maxLength="1"
                    android:padding="@dimen/_20sdp"
                    android:text=""
                    android:textSize="34sp"

                    android:textColor="@color/colorRed"
                    android:textColorHint="@color/colorLightBlue"
                    app:backgroundTint="@color/colorRed"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_otp_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:textSize="34sp"
                    android:layout_margin="@dimen/_2sdp"

                    android:maxLength="1"
                    android:padding="@dimen/_20sdp"
                    android:text=""
                    app:backgroundTint="@color/colorRed"
                    android:textColor="@color/colorRed"
                    android:textColorHint="@color/colorLightBlue" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_otp_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:text=""
                    android:textSize="34sp"
                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_20sdp"
                    android:textColor="@color/colorRed"
                    android:textColorHint="@color/colorLightBlue"
                    app:backgroundTint="@color/colorRed" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/title_resend_otp"
                android:textAlignment="center"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_background_i"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:text="@string/title_continue"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_text_blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:longClickable="false"
                android:text="@string/title_cancel"
                android:textColor="@color/colorLightBlue" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>