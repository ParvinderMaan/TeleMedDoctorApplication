<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpIIIFragment">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight=".25"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_logo_white" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_alignBottom="@+id/imageView"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:fontFamily="@font/circular_std_medium"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title_doctor_app" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".75"
        android:layout_height="0dp">
        <ScrollView
            android:overScrollMode="never"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--parent -->
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--            child-->
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:text="@string/title_additional_info"
                    app:backgroundTint="@color/colorWhite"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/colorLightBlue"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:inputType="textEmailAddress" />
                <!--            child-->

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_medical_degree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:text=""
                            app:backgroundTint="@color/colorWhite"
                            android:includeFontPadding="false"
                            android:textColorHint="@color/colorLightBlue"
                            android:padding="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:inputType="textEmailAddress" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_medical_degree"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorLightBlue"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_md_where"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:text=""
                            app:backgroundTint="@color/colorWhite"
                            android:includeFontPadding="false"

                            android:textColorHint="@color/colorLightBlue"
                            android:padding="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:inputType="textEmailAddress" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorWhite"
                            android:text="@string/title_where"
                            android:textColorHint="@color/colorLightBlue"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!--           child-->
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_other_degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_other_degrees"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp" />


                </LinearLayout>

                <!--           child-->
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_md_otr_where"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_where"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"/>


                </LinearLayout>
                <!--           child-->
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_dea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:inputType="text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_dea"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp" />


                </LinearLayout>
                <!--           child-->
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_npi_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_npi"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp" />


                </LinearLayout>
                <!--           child-->


                <RelativeLayout
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbox_read_and_accept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        app:buttonTint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:text="@string/term_and_condition" />

                </RelativeLayout>




                <!--           child-->
                <RelativeLayout
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:textColor="@drawable/selector_text_white"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:paddingStart="@dimen/_40sdp"
                        android:paddingEnd="@dimen/_40sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_background_ii"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/title_continue" />
                </RelativeLayout>

                <!--           child-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_cancel"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGrey"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text="@string/title_cancel" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>

