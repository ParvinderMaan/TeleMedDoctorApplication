<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videocall.VideoCallFragment">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight=".3">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_66sdp"

            android:layout_height="@dimen/_66sdp"
            android:src="@drawable/img_patient"
            app:civ_border_color="@color/colorBlue"
            app:civ_border_width="2dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight=".4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:maxLines="1"
            android:text="Pordan Gill"
            android:textColor="@color/colorBlue"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight=".3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_20sdp"
            android:background="@drawable/rounded_background_iii"
            android:lines="1"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:text="02:43" />

    </LinearLayout>

    </LinearLayout>




<ImageView
    android:scaleType="fitXY"
    android:src="@drawable/img_patient"
    android:layout_below="@+id/ll_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/rating_bar"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:layout_weight="1"
            android:id="@+id/ibtn_star_one"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_gallery"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/ibtn_star_two"
            app:srcCompat="@drawable/ic_medical_report"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="1"

            android:id="@+id/ibtn_star_three"
            app:srcCompat="@drawable/ic_turn_off"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="1"

            android:id="@+id/ibtn_star_four"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_mute"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</RelativeLayout>