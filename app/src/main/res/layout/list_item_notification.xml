<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:background="@color/colorRed"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_patient_pic"

            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"

            android:src="@drawable/img_patient"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="@dimen/_1sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_up_coming_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_4sdp"
                android:includeFontPadding="false"
                android:text="You have an appintment with new patient at 2am on Sunday .Be ready for the best service of the clients"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:ellipsize="end"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_upcoming_time"
                android:layout_width="match_parent"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="4 hours ago"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_4sdp"
        app:srcCompat="@drawable/ic_arrow_right_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/content"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="5dp"
            android:background="@color/colorWhite"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp" />

    </RelativeLayout>
</RelativeLayout>

