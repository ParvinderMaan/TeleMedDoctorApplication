<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/lay_recurring_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1.50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sun"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="F"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_day_of_week"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_time"
                app:drawableTint="@color/colorBlue"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="09:00AM - 10:00AM"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />
        </LinearLayout>


<!--        <ImageView-->
<!--            android:id="@+id/iv_edit"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="@dimen/_4sdp"-->
<!--            android:layout_weight=".25"-->
<!--            android:background="@drawable/click_schedule_update_button"-->
<!--            android:padding="@dimen/_5sdp"-->
<!--            android:src="@drawable/ic_edit_grey" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGrey"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_below="@+id/lay_recurring_schedule" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibtn_delete"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_ii" />
</RelativeLayout>
