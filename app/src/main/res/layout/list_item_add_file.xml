<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_doc_one"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_ii"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/tv_doc_name"
    android:textColorHint="@color/colorLightWhite"
    android:hint="@string/hint_click_to_add"
    android:layout_alignParentStart="true"
    android:layout_marginStart="@dimen/_10sdp"
    android:textSize="14sp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:ellipsize="end"
    android:layout_toStartOf="@+id/tv_doc_expiry_date"
    android:textColor="@color/colorLightWhite"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_doc_expiry_date"
        android:layout_toStartOf="@+id/ibtn_action"
        android:textColorHint="@color/colorLightWhite"
        android:hint="Expiry date"
        android:text=""
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLength="10"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/colorLightWhite"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<ImageButton
    android:id="@+id/ibtn_action"
    android:visibility="visible"
    app:srcCompat="@drawable/ic_upload"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="@dimen/_2sdp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@dimen/_20sdp"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</RelativeLayout>