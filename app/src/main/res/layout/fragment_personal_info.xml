<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite"
    tools:context=".PersonalInfoFragment">

    <!--    header layout-->
    <RelativeLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to call"
            android:layout_toRightOf="@+id/ibtn_back"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_cross_grey"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp" />
    </RelativeLayout>
<!--   middle layout -->
     <androidx.cardview.widget.CardView
         android:id="@+id/cv_video_call"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="@dimen/_20sdp"
         android:layout_width="@dimen/_100sdp"
         app:cardCornerRadius="@dimen/_5sdp"
         android:background="@color/colorBlue"
         android:layout_marginTop="@dimen/_20sdp"
         android:layout_height="@dimen/_150sdp">

         <ImageView
             android:background="@color/colorBlue"
             android:padding="@dimen/_1sdp"
             android:src="@drawable/img_patient"
             android:scaleType="fitXY"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>

     </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_time_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toStartOf="@+id/cv_video_call"
        android:layout_alignBottom="@+id/cv_video_call"
        android:paddingStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_gravity="end"

        android:paddingEnd="@dimen/_20sdp"
        android:background="@drawable/rounded_background_iii"
        android:lines="1"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:text="02:43" />


    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_below="@+id/tv_time_interval"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_ii"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:textStyle="bold"

                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorWhite" />

            <ImageButton
                android:id="@+id/ibtn_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_arrow_right_white"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View style="@style/DividerStyle"/>

        <LinearLayout
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">
             <LinearLayout
             android:orientation="vertical"
             android:gravity="center|start"
             android:layout_width="0dp"
             android:layout_weight=".37"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Name"
                 android:textSize="@dimen/_12sdp"
                 android:textColor="@color/colorWhite" />

             <TextView
                 android:textStyle="bold"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Jordan G"
                 android:ellipsize="end"
                 android:textSize="@dimen/_15sdp"
                 android:textColor="@color/colorWhite" />
         </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".03"
                android:layout_height="match_parent">
             <View
                 android:background="@color/colorWhite"
                 android:layout_height="match_parent"
                 android:layout_width="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".18"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:ellipsize="end"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.03"
                android:layout_height="match_parent">
                <View
                    android:background="@color/colorWhite"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".18"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:ellipsize="end"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.03"
                android:layout_height="match_parent">
                <View
                    android:background="@color/colorWhite"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".18"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5'9"
                    android:ellipsize="end"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorWhite" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_arrow_right_white"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View style="@style/DividerStyle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the drug"
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorWhite" />

            <TextView
                android:textStyle="bold"
                android:layout_below="@+id/tv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amoxilin"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Medical History"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorWhite" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_arrow_right_white"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View style="@style/DividerStyle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Palpitation"
                android:textSize="@dimen/_12sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>