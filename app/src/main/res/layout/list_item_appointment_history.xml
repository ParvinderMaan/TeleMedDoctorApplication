<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRed"
    android:orientation="vertical">

    <!-- middle layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_patient"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight=".7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Pordan Gill"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Miami, FL" />

        </LinearLayout>





    </LinearLayout>

    <!-- bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:background="@drawable/rounded_background_iv"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:maxLines="1"
                android:lines="1"
                android:paddingStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:drawablePadding="@dimen/_5sdp"
                android:background="@android:color/transparent"
                app:drawableLeftCompat="@drawable/ic_time"
                android:layout_height="wrap_content"
                android:text="Last Appointment" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:text="@string/last_appointment_time" />
        </LinearLayout>









    </LinearLayout>
</LinearLayout>
