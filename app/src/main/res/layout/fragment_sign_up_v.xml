<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpVFragment">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight=".25"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_logo_white" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_alignBottom="@+id/imageView"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:fontFamily="@font/circular_std_medium"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Doctor App" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".75"
        android:layout_height="0dp">
        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--parent -->
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--            child-->
                <!--            child-->
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBlue"
                    android:hint=""
                    android:text="Attached document"
                    app:backgroundTint="@color/colorWhite"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/colorLightBlue"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:inputType="textEmailAddress" />



                <!--            child-->


                <!--           child-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_document"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_sign_up"
                        android:layout_width="wrap_content"
                        android:textColor="@drawable/selector_text_white"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:paddingStart="@dimen/_40sdp"
                        android:paddingEnd="@dimen/_40sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_background_ii"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_height="wrap_content"
                        android:text="Sign Up" />
                </RelativeLayout>
                <!--           child-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_cancel"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGrey"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text="Cancel" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>

