<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="@dimen/_8sdp"
        android:text="Select your available days"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sun"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Sun"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Mon"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tue"

            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Tue"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_wed"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Wed"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_thu"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Thu"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_fri"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Fri"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_sat"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/selector_day_of_week"
            android:gravity="center"
            android:text="Sat"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="SELECT ALL"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="DONE"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>


</LinearLayout>
