<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_gravity="fill"
    android:clickable="true"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/_12sdp"
    android:foreground="?selectableItemBackground"
    android:paddingBottom="@dimen/_12sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/rounded_background_vii"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_time_slot"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:maxLines="1"
        android:clickable="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:tooltipText="use edit button to choose your schedule"
        android:gravity="start"
        android:text="8:00 / 8:30"
        android:textColor="@drawable/selector_txt_day_of_week"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_one"
        android:clickable="true"
        android:layout_width="@dimen/_1sdp"
        android:background="@color/colorBlue"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_patient_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="center"
        android:text="--"
        android:clickable="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@drawable/selector_txt_day_of_week"
        android:tooltipText="use edit button to choose your schedule"
        android:textSize="14sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view_two"
        android:layout_width="@dimen/_1sdp"
        android:clickable="true"
        android:background="@color/colorBlue"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_firm_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="center"
        android:text="--"
        android:clickable="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@drawable/selector_txt_day_of_week"
        android:tooltipText="use edit button to choose your schedule"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
