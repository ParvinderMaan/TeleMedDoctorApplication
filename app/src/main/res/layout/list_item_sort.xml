<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!-- middle layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_patient"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight=".75">

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Marcos Adam"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_disease_name"
                android:layout_below="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlue"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxLength="20"
                android:ellipsize="end"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Sinus" />
            <LinearLayout
                android:id="@+id/ll_prescription"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@+id/tv_patient_name"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"

                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/colorBlue"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:text="Prescription" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textAlignment="textStart"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:textColor="@color/colorBlue"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Pepto - Bismol" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlue"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textAlignment="textStart"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Once a day for three days" />
            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>










</LinearLayout>
