<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpIIFragment">
 <RelativeLayout
     android:layout_width="match_parent"
     android:gravity="center"
     android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/imageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         app:srcCompat="@drawable/ic_logo_white" />

     <TextView
         android:id="@+id/textView"
         android:layout_marginBottom="@dimen/_10sdp"
         android:fontFamily="@font/circular_std_medium"
         android:layout_alignBottom="@+id/imageView"
         android:textColor="@color/colorWhite"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="@string/title_doctor_app" />

     <include
         android:id="@+id/progress_bar"
         layout="@layout/layout_progress_bar"/>

 </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
        android:layout_weight=".75"
        android:layout_height="0dp">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--parent -->
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--            child-->
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:text="@string/title_personal_info"
                app:backgroundTint="@color/colorWhite"
                android:includeFontPadding="false"
                android:textColorHint="@color/colorLightBlue"
                android:padding="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:inputType="textEmailAddress" />
            <!--            child-->

         <LinearLayout
           android:layout_marginTop="@dimen/_20sdp"
           android:baselineAligned="false"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout

               android:layout_width="0dp"
               android:layout_weight=".5"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/edt_doc_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint=""
                   android:imeOptions="actionNext"
                   android:text=""
                   android:maxLines="1"
                   android:longClickable="false"
                   app:backgroundTint="@color/colorWhite"
                   android:includeFontPadding="false"
                   android:textColorHint="@color/colorLightBlue"
                   android:padding="@dimen/_10sdp"
                   android:textStyle="bold"
                   android:textColor="@color/colorWhite"
                   android:inputType="text" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/title_doctor_name"
                   android:includeFontPadding="false"
                   android:textColor="@color/colorWhite"
                   android:textColorHint="@color/colorLightBlue"
                   android:paddingStart="@dimen/_10sdp"
                   tools:ignore="RtlSymmetry" />
           </LinearLayout>
           <LinearLayout

               android:layout_width="0dp"
               android:layout_weight=".5"
               android:orientation="vertical"
               android:layout_height="wrap_content">

               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/edt_doc_surname"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint=""
                   android:text=""
                   android:imeOptions="actionDone"
                   android:maxLines="1"
                   android:longClickable="false"
                   app:backgroundTint="@color/colorWhite"
                   android:includeFontPadding="false"
                   android:textColorHint="@color/colorLightBlue"
                   android:padding="@dimen/_10sdp"
                   android:textStyle="bold"
                   android:textColor="@color/colorWhite"
                   android:inputType="text"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:includeFontPadding="false"
                   android:textColor="@color/colorWhite"
                   android:text="@string/title_doctor_surname"
                   android:textColorHint="@color/colorLightBlue"
                   android:paddingStart="@dimen/_10sdp"
                   tools:ignore="RtlSymmetry" />
           </LinearLayout>
       </LinearLayout>
            <!--            child-->

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_dob"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:text=""
                        android:inputType="text"
                        android:maxLines="1"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_dob"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <!--                child-->
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_birth_city"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:text="@string/title_birth_city"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>

            <!--            child-->

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_birth_country"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:text=""
                        android:inputType="text"
                        android:maxLines="1"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_birth_country"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

<!--                child-->
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_nationality"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:text="@string/title_nationality"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>
<!--           child-->


            <!--           child-->
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_speciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBlue"
                    android:hint=""
                    android:clickable="true"
                    android:focusable="false"
                    android:text=""
                    android:maxLines="1"
                    android:inputType="text"
                    android:longClickable="false"
                    app:drawableRightCompat="@drawable/ic_arrow_down"
                    app:backgroundTint="@color/colorWhite"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/colorLightBlue"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorLightBlue"
                    android:paddingStart="@dimen/_10sdp" />


            </LinearLayout>
            <!--           child-->

            <!--            child-->

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_language_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:clickable="true"
                        android:focusable="false"
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:text=""
                        android:maxLines="1"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:inputType="text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_language_one"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_language_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:text=""
                        android:clickable="true"
                        android:focusable="false"
                        android:maxLines="1"
                        android:inputType="text"
                        app:drawableRightCompat="@drawable/ic_arrow_down"
                        android:longClickable="false"
                        app:backgroundTint="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/colorLightBlue"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:text="@string/title_language_two"
                        android:textColorHint="@color/colorLightBlue"
                        android:paddingStart="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>

            <!--           child-->
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBlue"
                    android:hint=""
                    android:text=""
                    android:maxLines="1"
                    android:longClickable="false"
                    app:backgroundTint="@color/colorWhite"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/colorLightBlue"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:inputType="text" />


            </LinearLayout>

            <!--           child-->
            <LinearLayout


                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Address"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorLightBlue" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_email"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBlue"
                    android:hint=""
                    android:text=""
                    android:longClickable="false"
                    app:backgroundTint="@color/colorWhite"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/colorLightBlue"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorWhite"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:maxLines="1"
                    android:longClickable="false"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorLightBlue"
                    android:paddingStart="@dimen/_10sdp" />


            </LinearLayout>
        <!--           child-->
        <RelativeLayout
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:textColor="@drawable/selector_text_white"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/rounded_background_ii"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Continue" />
        </RelativeLayout>
            <!--           child-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cancel"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightGrey"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:text="Cancel" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</LinearLayout>

