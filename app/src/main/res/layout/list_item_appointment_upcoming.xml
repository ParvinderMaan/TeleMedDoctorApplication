<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRed"
    android:orientation="vertical">

<!-- middle layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_patient"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight=".35">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Pordan Gill"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:text="Miami, FL" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight=".05">

          <View
              android:layout_gravity="center"
              android:layout_width="1.0dp"
              android:background="@color/colorLightWhite"
              android:layout_height="@dimen/_50sdp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight=".3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:text="THU" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textAlignment="center"
                android:includeFontPadding="true"
                android:lines="1"
                android:maxLines="1"
                android:text="5:30PM - 6:00PM" />
        </LinearLayout>



    </LinearLayout>

    <!-- bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5">


       <LinearLayout
           android:orientation="vertical"
           android:background="@drawable/rounded_background_iv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:textColor="@color/colorWhite"
               android:paddingStart="@dimen/_20sdp"
               android:paddingEnd="@dimen/_20sdp"
               android:textAllCaps="false"
               android:background="@android:color/transparent"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_marginEnd="@dimen/_5sdp"
               app:drawableLeftCompat="@drawable/ic_time"
               android:layout_height="wrap_content"
               android:text="@string/estimate_time" />

       </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5">

            <Button
                android:id="@+id/btn_more"
                android:layout_width="match_parent"
                android:textColor="@drawable/selector_text_white"
                android:textStyle="bold"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textAllCaps="false"

                android:background="@drawable/rounded_background_iii"
                android:layout_height="wrap_content"
                android:text="More" />
        </LinearLayout>

<!--        Medical Records-->





    </LinearLayout>
</LinearLayout>
